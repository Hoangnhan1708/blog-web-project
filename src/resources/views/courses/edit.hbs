<div class='mt-4'>
    <h3>Cập nhật khóa học</h3>

    <form method='POST' action='/courses/{{course._id}}?_method=PUT'>
        <div class='form-group mb-3'>
            <label for='name' class='form-label'>Name</label>
            <input type='text' value='{{course.name}}' name='name' class='form-control' id='name' />
        </div>
        <div class='form-group mb-3'>
            <label for='description' class='form-label'>Description</label>
            <textarea type='text' name='description' class='form-control' id='description'>
                {{course.description}}
            </textarea>
        </div>
        <div class='form-group mb-3'>
            <label for='videoId' class='form-label'>videoId</label>
            <input type='text' value='{{course.video}}' name='videoId' class='form-control' id='videoId' />
        </div>
        <div class='form-group mb-3'>
            <label for='level' class='form-label'>level</label>
            <input type='text' value='{{course.level}}' name='level' class='form-control' id='level' />
        </div>
        <button type='submit' class='btn btn-primary'>Lưu</button>
    </form>
</div>